<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

<h2>CREATE A NEW ENTRY</h2>

  <p>
    <label for="title">Title</label>
    <input type="text" name="title" value="" id="title">
    </br>
  </p>

  <p>
    <label for="name">Name</label>
    <input type="text" name="name" value="" id="name">
    </br>
  </p>

  <p>
    <label for="description">Description</label>
    <input type="text" name="description" value="" id="description">
    </br>
  </p>

  <p>
    <label for="completion_status">Completion Status</label>
    <input type="text" name="completion_status" value="" id="completion_status">
    </br>
  </p>

  <p>
    <label for="completed_at">Completion Date</label>
    <input type="text" name="completed_at" value="" id="completed_at">
    </br>
  </p>

  <input type="submit" value="Submit">
</form>
